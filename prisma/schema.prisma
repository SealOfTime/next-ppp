generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firsName String
  lastName String
  role Role @default(PLAYER)
  phone String
  urlVK String
  team Team? @relation("teamRelataion", fields: [teamID], references: [id])
  captain Team? @relation("captainRelation", fields: [id], references: [id])
  teamID String?
}

model Team {
  id String @id @default(uuid())
  name String
  dataStart DateTime 
  captain User? @relation("captainRelation")
  members User[] @relation("teamRelataion")
}

enum Role {
  PLAYER
  CAPTAIN
  ADAPTER
  ADMIN
}